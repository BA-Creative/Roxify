{
  "name": "roxify",
  "version": "1.0.0",
  "description": "This repo is designed to work with Shopify Dawn theme v15.x.x",
  "main": "index.js",
  "scripts": {
    "connect": "shopify theme list --store=${PWD##*/}",
    "dev": "shopify theme dev --store=\"${PWD##*/}\"",
    "scss": "sass --watch sources/scss:assets --style compressed",
    "tw": "npx tailwindcss -i ./sources/css/tw.css -o ./assets/tw.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BA-Creative/Roxify.git"
  },
  "author": "BA Creative",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BA-Creative/Roxify/issues"
  },
  "homepage": "https://github.com/BA-Creative/Roxify#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "tailwindcss": "^4.0.8"
  }
}
